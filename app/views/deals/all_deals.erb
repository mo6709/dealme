<h3><%= current_user.username%> welcome,</h3>
<form method="get" action="/deals/new">
	<input type="submit" value="Add New Deal">
</form><br>

<h4>Here is your deals bucket:</h4><br>
<ul>
	<% current_user.deals.each do |deal|%>
	  <li>
	      <a href="/deals/<%= deal.id%>"><%= deal.title%></a>   
          <form method="post" action="/deals/<%= deal.id%>/delete">
             <input id="hidden" type="hidden" name="_method" value="delete">
          	<input type="submit" value="Delete">
          </form><br>
	  </li>
	<% end%>
</ul>